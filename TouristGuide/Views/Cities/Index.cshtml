@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<City>

<h1 class="mb-4">Список городов</h1>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Поиск города..." />
        <button class="btn btn-primary" type="submit">Поиск</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var city in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@city.PhotoUrl" class="card-img-top" alt="@city.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@city.Name</h5>
                    <p class="card-text">@city.Region<br />Население: @city.Population</p>
                    <a href="@Url.Action("Details", new { id = city.Id })" class="btn btn-outline-primary">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>
