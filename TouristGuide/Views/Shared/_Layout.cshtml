<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Туристический Путеводитель</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif; 
            background-color: #f8f9fa; 
            color: #343a40;
        }

        .navbar {
            background-color: #6a5acd;
            border-bottom: 2px solid #5446a3;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.75rem;
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); 
        }

        .container {
            max-width: 1000px;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg mb-4">
        <div class="container">
            <a class="navbar-brand text-white" href="@Url.Action("Index", "Cities")">Туристический Путеводитель</a>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>